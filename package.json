{
  "name": "solidity-ide",
  "version": "2.2.1",
  "private": false,
  "description": "A light and easy IDE for Solidity smart contract development.",
  "author": "SystemGlitch",
  "license": "MIT",
  "main": "solc-server.js",
  "bin": {
    "solidity-ide": "./solc-server.js"
  },
  "bugs": {
    "url": "https://github.com/System-Glitch/Solidity-IDE/issues"
  },
  "homepage": "https://github.com/System-Glitch/Solidity-IDE",
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "build-local": "vue-cli-service build && node replace.js",
    "lint": "vue-cli-service lint",
    "server": "node solc-server.js -d",
    "ide": "node solc-server.js"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "express": "^4.16.4",
    "ganache-cli": "^6.4.1",
    "minimist": "^1.2.0",
    "solc": "^0.5.7"
  },
  "devDependencies": {
    "@vue/cli": "^3.5.3",
    "@vue/cli-plugin-babel": "^3.5.3",
    "@vue/cli-plugin-eslint": "^3.5.1",
    "@vue/cli-service": "^3.5.3",
    "@vue/cli-service-global": "^3.5.3",
    "ace-mode-solidity": "^0.1.1",
    "axios": "^0.18.0",
    "babel-eslint": "^10.0.1",
    "bootstrap": "^4.3.1",
    "bootstrap-vue": "^2.0.0-rc.16",
    "brace": "^0.11.1",
    "core-js": "^2.6.5",
    "es6-promise": "^4.2.6",
    "eslint": "^5.15.3",
    "eslint-plugin-vue": "^5.2.2",
    "node-sass": "^4.11.0",
    "sass-loader": "^7.1.0",
    "split.js": "^1.5.10",
    "vue": "^2.6.10",
    "vue-template-compiler": "^2.6.10",
    "web3": "1.0.0-beta.46",
    "webpack": "^4.29.6"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true,
      "node": true
    },
    "globals": {
      "GlobalEvent": true,
      "axios": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {},
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
